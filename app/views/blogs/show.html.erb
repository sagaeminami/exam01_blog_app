<div class="container">
  <div class="row">
    <div class="back_panel col-xs-12 col-md-4 col-md-offset-4 form-content">
      <h1>投稿詳細</h1>
      <p>Title: <%=@blog.title%></p>
      <p>Contents: <%=@blog.content%></p>

      <% unless @blog.user == current_user %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-prymary' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
